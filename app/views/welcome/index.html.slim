	section id="contacts"
		h1 GET IN TOUCH
		hr
		.row
			.large-12.columns
				div.description
					h4 Iâ€™m always pleased to chat about work and meet new people in the industry. 
					h4 Send me a message using the form below.
				div.success-message
					=flash[:success]
				= form_tag(send_mail_path) do
					div.small-12.large-6.columns style="padding-left:0;"
	            		= label_tag 'name', 'Name *'
	                	= text_field_tag 'name', nil, class: 'form-control', placeholder: 'Your Name',required:true
